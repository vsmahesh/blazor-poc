@page "/page4"
@attribute [Authorize(Policy = "RoleAccess")]
@using Microsoft.AspNetCore.Authorization
@using System.Security.Claims

<PageTitle>Page 4 - BasicBlazor</PageTitle>

<h1>Page 4</h1>
<p class="role-requirements">Role requirements: <strong>All roles (User, Manager, Admin)</strong></p>

<AuthorizeView>
    <Authorized>
        <p>Welcome, <strong>@context.User.Identity?.Name</strong>! Your role is: <strong>@context.User.FindFirst(ClaimTypes.Role)?.Value</strong></p>
        <p>This page is accessible to all authenticated users regardless of role.</p>
    </Authorized>
</AuthorizeView>
