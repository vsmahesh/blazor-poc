@page "/login"
@page "/"
@inject AuthService AuthService
@inject NavigationManager Navigation
@inject PageAccessService PageAccessService
@inject IHttpContextAccessor HttpContextAccessor
@inject AuthenticationStateProvider AuthStateProvider
@using BasicBlazor.Data.Services
@using System.Security.Claims
@using Microsoft.AspNetCore.Authentication
@using Microsoft.AspNetCore.Authentication.Cookies
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.AspNetCore.Components.Authorization
@using System.ComponentModel.DataAnnotations

<PageTitle>Login - BasicBlazor</PageTitle>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">Login</h2>

                    @if (!string.IsNullOrEmpty(_errorMessage))
                    {
                        <div class="alert alert-danger" role="alert">
                            @_errorMessage
                        </div>
                    }

                    @if (Message == "session-expired")
                    {
                        <div class="alert alert-warning" role="alert">
                            Your session has expired due to inactivity. Please log in again.
                        </div>
                    }

                    @* Stage 1: Username Entry *@
                    @if (_currentStage == LoginStage.UsernameEntry)
                    {
                        <EditForm Model="@UsernameModel" OnValidSubmit="@HandleContinue" FormName="usernameForm">
                            <DataAnnotationsValidator />
                            <div class="mb-3">
                                <label for="username" class="form-label">Username or Email</label>
                                <InputText id="username"
                                          @bind-Value="UsernameModel!.Username"
                                          class="form-control"
                                          maxlength="100"
                                          placeholder="Enter your username or email"
                                          autofocus />
                                <ValidationMessage For="@(() => UsernameModel!.Username)" />
                            </div>

                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary" disabled="@_isLoading">
                                    @if (_isLoading)
                                    {
                                        <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                        <span>Processing...</span>
                                    }
                                    else
                                    {
                                        <span>Continue</span>
                                    }
                                </button>
                            </div>
                        </EditForm>

                        <div class="mt-3 text-center">
                            <small class="text-muted">
                                Enter your email for SSO login, or username for native authentication.
                            </small>
                        </div>
                    }

                    @* Stage 2: Password Entry (Native Login) *@
                    @if (_currentStage == LoginStage.PasswordEntry)
                    {
                        <EditForm Model="@LoginModel" OnValidSubmit="@HandleLogin" FormName="loginForm">
                            <DataAnnotationsValidator />
                            <div class="mb-3">
                                <label for="username" class="form-label">Username</label>
                                <InputText id="username"
                                          @bind-Value="LoginModel!.Username"
                                          class="form-control"
                                          readonly />
                            </div>

                            <div class="mb-3">
                                <label for="password" class="form-label">Password</label>
                                <InputText type="password"
                                          id="password"
                                          @bind-Value="LoginModel!.Password"
                                          class="form-control"
                                          maxlength="100"
                                          placeholder="Enter your password"
                                          autofocus />
                                <ValidationMessage For="@(() => LoginModel!.Password)" />
                            </div>

                            <div class="d-flex gap-2">
                                <button type="button" class="btn btn-secondary" @onclick="HandleBack" disabled="@_isLoading">
                                    Back
                                </button>
                                <button type="submit" class="btn btn-primary flex-grow-1" disabled="@_isLoading">
                                    @if (_isLoading)
                                    {
                                        <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                        <span>Logging in...</span>
                                    }
                                    else
                                    {
                                        <span>Login</span>
                                    }
                                </button>
                            </div>
                        </EditForm>
                    }

                    <div class="mt-3 text-center text-muted small">
                        <p class="mb-1"><strong>Test Credentials (Native Login):</strong></p>
                        <p class="mb-1">admin/Admin123! | manager/Manager123! | user/User123!</p>
                        <p class="mb-0"><em>Tip: Enter username for native login, or email (e.g., admin@example.com) for SSO.</em></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [SupplyParameterFromQuery(Name = "message")]
    public string? Message { get; set; }

    // Two separate model properties for each stage
    [SupplyParameterFromForm(FormName = "usernameForm")]
    private UsernameFormModel? UsernameModel { get; set; }

    [SupplyParameterFromForm(FormName = "loginForm")]
    private LoginFormModel? LoginModel { get; set; }

    private string _errorMessage = "";
    private bool _isLoading = false;

    // Two-stage login state management
    private enum LoginStage
    {
        UsernameEntry,    // Stage 1: Show username field only
        PasswordEntry     // Stage 2: Show username + password fields
    }

    private LoginStage _currentStage = LoginStage.UsernameEntry;

    protected override async Task OnInitializedAsync()
    {
        // Determine current stage based on which form was submitted (for postback scenarios)
        // When a form posts back, Blazor only populates the model matching that form's FormName
        // Check BEFORE initializing with ??= so we can detect which form posted
        if (LoginModel != null)
        {
            // loginForm was submitted (Stage 2)
            _currentStage = LoginStage.PasswordEntry;
        }
        else
        {
            // usernameForm was submitted or initial page load (Stage 1)
            _currentStage = LoginStage.UsernameEntry;
        }

        // Initialize both models (create empty instances for any that are null)
        UsernameModel ??= new UsernameFormModel();
        LoginModel ??= new LoginFormModel();

        // Check if user is already authenticated
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user.Identity?.IsAuthenticated ?? false)
        {
            // User is already logged in, redirect to their first allowed page
            var role = user.FindFirst(ClaimTypes.Role)?.Value;
            var redirectUrl = PageAccessService.GetFirstAllowedPage(role) ?? "/access-denied";
            Navigation.NavigateTo(redirectUrl, forceLoad: true);
        }
    }

    /// <summary>
    /// Base model for Stage 1 (Username entry only).
    /// Contains only username field with validation.
    /// </summary>
    public class UsernameFormModel
    {
        [Required(ErrorMessage = "Username is required")]
        [MaxLength(100)]
        public string Username { get; set; } = "";
    }

    /// <summary>
    /// Derived model for Stage 2 (Username + Password entry).
    /// Inherits Username from base class and adds Password field with validation.
    /// </summary>
    public class LoginFormModel : UsernameFormModel
    {
        [Required(ErrorMessage = "Password is required")]
        [MaxLength(100)]
        public string Password { get; set; } = "";
    }

    /// <summary>
    /// Checks if the input matches an email pattern (contains @ with characters before and after).
    /// </summary>
    private bool IsEmailPattern(string input)
    {
        if (string.IsNullOrWhiteSpace(input))
            return false;

        var atIndex = input.IndexOf('@');
        return atIndex > 0 && atIndex < input.Length - 1;
    }

    /// <summary>
    /// Handles the Continue button click from Stage 1 (username entry).
    /// Determines whether to proceed to password entry (native) or redirect to SSO.
    /// </summary>
    private void HandleContinue()
    {
        // UsernameModel validation is handled automatically by DataAnnotationsValidator

        // Check if email pattern
        if (IsEmailPattern(UsernameModel!.Username))
        {
            // Redirect to SSO mock page with email as query parameter
            Navigation.NavigateTo($"/sso-login?email={Uri.EscapeDataString(UsernameModel.Username)}", forceLoad: true);
            return;
        }

        // Not an email - proceed to password entry
        // Copy username from Stage 1 model to Stage 2 model
        LoginModel!.Username = UsernameModel.Username;
        _currentStage = LoginStage.PasswordEntry;
        _errorMessage = string.Empty;
    }

    /// <summary>
    /// Handles the Back button click from Stage 2 (password entry).
    /// Returns to Stage 1 (username entry) while preserving the username.
    /// </summary>
    private void HandleBack()
    {
        // Copy username back from Stage 2 model to Stage 1 model
        UsernameModel!.Username = LoginModel!.Username;
        _currentStage = LoginStage.UsernameEntry;
        _errorMessage = string.Empty;
    }

    /// <summary>
    /// Handles login form submission.
    /// Validates credentials, creates claims principal, signs user in, and redirects to appropriate page.
    /// </summary>
    private async Task HandleLogin()
    {
        _errorMessage = "";
        _isLoading = true;

        try
        {
            // Ensure model is not null
            if (LoginModel == null)
            {
                _errorMessage = "Form data is missing.";
                return;
            }

            // Password validation is handled automatically by DataAnnotationsValidator
            // since LoginFormModel has [Required] attribute on Password property

            // Validate credentials using AuthService
            var user = await AuthService.ValidateCredentials(LoginModel.Username, LoginModel.Password);

            if (user == null)
            {
                // Security: Generic error prevents username enumeration
                _errorMessage = "Invalid username or password.";
                return;
            }

            // Create claims for authenticated user (only Name, NameIdentifier, and Role - NO permissions)
            var claims = new List<Claim>
            {
                new Claim(ClaimTypes.Name, user.Username),
                new Claim(ClaimTypes.NameIdentifier, user.Id.ToString()),
                new Claim(ClaimTypes.Role, user.Role.RoleName)
            };

            var identity = new ClaimsIdentity(claims, CookieAuthenticationDefaults.AuthenticationScheme);
            var principal = new ClaimsPrincipal(identity);

            // Ensure HttpContext is available
            var httpContext = HttpContextAccessor.HttpContext;
            if (httpContext == null)
            {
                _errorMessage = "Authentication context not available.";
                return;
            }

            // Sign user in with cookie authentication
            await httpContext.SignInAsync(
                CookieAuthenticationDefaults.AuthenticationScheme,
                principal,
                new AuthenticationProperties
                {
                    IsPersistent = false // Session-only cookie (not persistent across browser close)
                });

            // Determine redirect destination based on user's role
            var firstAllowedPage = PageAccessService.GetFirstAllowedPage(user.Role.RoleName);

            // Navigate to first allowed page or access denied if none
            var redirectUrl = firstAllowedPage ?? "/access-denied";
            Navigation.NavigateTo(redirectUrl, forceLoad: true);
        }
        catch (Exception ex)
        {
            _errorMessage = $"An error occurred during login: {ex.Message}";
        }
        finally
        {
            _isLoading = false;
        }
    }
}
