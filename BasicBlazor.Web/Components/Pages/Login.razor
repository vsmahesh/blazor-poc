@page "/login"
@page "/"
@inject AuthService AuthService
@inject NavigationManager Navigation
@inject PageAccessService PageAccessService
@inject IHttpContextAccessor HttpContextAccessor
@inject AuthenticationStateProvider AuthStateProvider
@using BasicBlazor.Data.Services
@using System.Security.Claims
@using Microsoft.AspNetCore.Authentication
@using Microsoft.AspNetCore.Authentication.Cookies
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.AspNetCore.Components.Authorization
@using System.ComponentModel.DataAnnotations

<PageTitle>Login - BasicBlazor</PageTitle>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">Login</h2>

                    @if (!string.IsNullOrEmpty(_errorMessage))
                    {
                        <div class="alert alert-danger" role="alert">
                            @_errorMessage
                        </div>
                    }

                    @if (Message == "session-expired")
                    {
                        <div class="alert alert-warning" role="alert">
                            Your session has expired due to inactivity. Please log in again.
                        </div>
                    }

                    <EditForm Model="@LoginModel" OnValidSubmit="@HandleLogin" FormName="login">
                        <DataAnnotationsValidator />
                        <div class="mb-3">
                            <label for="username" class="form-label">Username</label>
                            <InputText id="username"
                                      @bind-Value="LoginModel.Username"
                                      class="form-control"
                                      maxlength="100"
                                      autofocus />
                            <ValidationMessage For="@(() => LoginModel.Username)" />
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <InputText type="password"
                                      id="password"
                                      @bind-Value="LoginModel.Password"
                                      class="form-control"
                                      maxlength="100" />
                            <ValidationMessage For="@(() => LoginModel.Password)" />
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary" disabled="@_isLoading">
                                @if (_isLoading)
                                {
                                    <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                    <span>Logging in...</span>
                                }
                                else
                                {
                                    <span>Login</span>
                                }
                            </button>
                        </div>
                    </EditForm>

                    <div class="mt-3 text-center text-muted small">
                        <p class="mb-1">Test Credentials:</p>
                        <p class="mb-0">admin/Admin123! | manager/Manager123! | user/User123!</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [SupplyParameterFromQuery(Name = "message")]
    public string? Message { get; set; }

    [SupplyParameterFromForm]
    private LoginFormModel? LoginModel { get; set; }

    private string _errorMessage = "";
    private bool _isLoading = false;

    protected override async Task OnInitializedAsync()
    {
        LoginModel ??= new LoginFormModel();

        // Check if user is already authenticated
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user.Identity?.IsAuthenticated ?? false)
        {
            // User is already logged in, redirect to their first allowed page
            var role = user.FindFirst(ClaimTypes.Role)?.Value;
            var redirectUrl = PageAccessService.GetFirstAllowedPage(role) ?? "/access-denied";
            Navigation.NavigateTo(redirectUrl, forceLoad: true);
        }
    }

    public class LoginFormModel
    {
        [Required(ErrorMessage = "Username is required")]
        [MaxLength(100)]
        public string Username { get; set; } = "";

        [Required(ErrorMessage = "Password is required")]
        [MaxLength(100)]
        public string Password { get; set; } = "";
    }

    /// <summary>
    /// Handles login form submission.
    /// Validates credentials, creates claims principal, signs user in, and redirects to appropriate page.
    /// </summary>
    private async Task HandleLogin()
    {
        _errorMessage = "";
        _isLoading = true;

        try
        {
            // Ensure model is not null
            if (LoginModel == null)
            {
                _errorMessage = "Form data is missing.";
                return;
            }

            // Validate credentials using AuthService
            var user = await AuthService.ValidateCredentials(LoginModel.Username, LoginModel.Password);

            if (user == null)
            {
                // Security: Generic error prevents username enumeration
                _errorMessage = "Invalid username or password.";
                return;
            }

            // Create claims for authenticated user (only Name, NameIdentifier, and Role - NO permissions)
            var claims = new List<Claim>
            {
                new Claim(ClaimTypes.Name, user.Username),
                new Claim(ClaimTypes.NameIdentifier, user.Id.ToString()),
                new Claim(ClaimTypes.Role, user.Role.RoleName)
            };

            var identity = new ClaimsIdentity(claims, CookieAuthenticationDefaults.AuthenticationScheme);
            var principal = new ClaimsPrincipal(identity);

            // Ensure HttpContext is available
            var httpContext = HttpContextAccessor.HttpContext;
            if (httpContext == null)
            {
                _errorMessage = "Authentication context not available.";
                return;
            }

            // Sign user in with cookie authentication
            await httpContext.SignInAsync(
                CookieAuthenticationDefaults.AuthenticationScheme,
                principal,
                new AuthenticationProperties
                {
                    IsPersistent = false // Session-only cookie (not persistent across browser close)
                });

            // Determine redirect destination based on user's role
            var firstAllowedPage = PageAccessService.GetFirstAllowedPage(user.Role.RoleName);

            // Navigate to first allowed page or access denied if none
            var redirectUrl = firstAllowedPage ?? "/access-denied";
            Navigation.NavigateTo(redirectUrl, forceLoad: true);
        }
        catch (Exception ex)
        {
            _errorMessage = $"An error occurred during login: {ex.Message}";
        }
        finally
        {
            _isLoading = false;
        }
    }
}
