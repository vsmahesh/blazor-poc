@page "/sso-login"
@inject NavigationManager Navigation

<PageTitle>SSO Login - BasicBlazor</PageTitle>

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body text-center p-5">
                    <div class="mb-4">
                        <i class="bi bi-shield-lock display-1 text-primary"></i>
                    </div>

                    <h2 class="mb-3">SSO Authentication</h2>

                    @if (!string.IsNullOrEmpty(Email))
                    {
                        <p class="lead mb-4">
                            Redirecting to SSO provider for:<br/>
                            <strong class="text-primary">@Email</strong>
                        </p>
                    }
                    else
                    {
                        <p class="lead mb-4">
                            Initializing SSO authentication...
                        </p>
                    }

                    <div class="alert alert-info mb-4">
                        <i class="bi bi-info-circle me-2"></i>
                        <strong>Mock SSO Page</strong><br/>
                        SSO integration will be implemented in a future release.
                    </div>

                    <a href="/login" class="btn btn-secondary">
                        <i class="bi bi-arrow-left me-2"></i>Back to Login
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [SupplyParameterFromQuery(Name = "email")]
    public string? Email { get; set; }
}
