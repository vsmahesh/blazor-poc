@inject IConfiguration Configuration

@if (IsEnabled)
{
    <script>
        window.SESSION_TIMEOUT_CONFIG = {
            timeoutMinutes: @TimeoutMinutes,
            warningBeforeMinutes: @WarningBeforeMinutes
        };
    </script>
    <script type="module" src="@Assets["Components/Layout/SessionTimeoutModal.razor.js"]"></script>

    <dialog id="session-timeout-modal" data-nosnippet aria-labelledby="session-timeout-title">
        <div class="session-timeout-container">
            <div class="session-timeout-icon" aria-hidden="true">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"></path>
                    <line x1="12" y1="9" x2="12" y2="13"></line>
                    <line x1="12" y1="17" x2="12.01" y2="17"></line>
                </svg>
            </div>
            <h2 id="session-timeout-title">Session Expiring Soon</h2>
            <p class="session-timeout-message">
                Your session will expire in <span id="session-timeout-countdown" class="countdown-timer">60</span> seconds due to inactivity.
            </p>
            <p class="session-timeout-instruction">
                Click "Extend Session" to continue working, or you will be automatically logged out.
            </p>
            <button id="session-extend-button" type="button" class="session-extend-btn">
                Extend Session
            </button>
        </div>
    </dialog>
}

@code {
    private int TimeoutMinutes => Configuration.GetValue<int>("SessionTimeout:TimeoutMinutes", 5);
    private int WarningBeforeMinutes => Configuration.GetValue<int>("SessionTimeout:WarningBeforeMinutes", 1);
    private bool IsEnabled => Configuration.GetValue<bool>("SessionTimeout:Enabled", true);
}
